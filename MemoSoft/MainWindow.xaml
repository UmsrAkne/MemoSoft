<Window x:Class="MemoSoft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoSoft"
        mc:Ignorable="d"
        Activated="App_Activated"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel Orientation="Vertical">

        <StackPanel.InputBindings>
            <KeyBinding Gesture ="Ctrl+S" Command="{Binding KeyCommands.SaveFileCommand}" />
            <KeyBinding Gesture="Ctrl+Enter" Command="{Binding KeyCommands.SaveFileCommand}" />

        </StackPanel.InputBindings>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
                <MenuItem Header="Quit"/>
            </MenuItem>
        </Menu>

        <TextBox x:Name="textBox"
                 Margin="0"
                 AcceptsReturn="True"
                 FontSize="12pt"
                 Foreground="Gray"
                 Opacity="0.8"
                 Text="{Binding InputString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 />
    </StackPanel>
</Window>
