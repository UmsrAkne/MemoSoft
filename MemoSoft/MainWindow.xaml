<Window x:Class="MemoSoft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoSoft"
        mc:Ignorable="d"
        Activated="App_Activated"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

        <Grid Name="parentGrid" Opacity="0.7">
            <Grid.InputBindings>
                <KeyBinding Gesture ="Ctrl+S" Command="{Binding KeyCommands.SaveFileCommand}" />
                <KeyBinding Gesture="Ctrl+Enter" Command="{Binding KeyCommands.SaveFileCommand}" />
            </Grid.InputBindings>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

        <Menu VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
                <MenuItem Header="Quit"/>
            </MenuItem>
        </Menu>

        <TextBox x:Name="textBox"
             Margin="0"
             AcceptsReturn="True"
             FontSize="12pt"
             Padding="3"
             Foreground="Gray"
             Opacity="0.8"
             Text="{Binding InputString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
             Grid.Row="1"
             />

        <ScrollViewer Grid.Row="2">
            <StackPanel>
                <ListBox HorizontalContentAlignment="Stretch"
                         ItemsSource="{Binding PostedComments}">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightCyan"
                                    CornerRadius="4"
                                    Margin="3"
                                    BorderThickness="1,1,1,1"
                                    >
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0.5">
                                        <GradientStop Color="AliceBlue" Offset="0"/>
                                        <GradientStop Color="Snow" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid Width="{Binding ElementName=parentGrid, Path=Width}" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               FontSize="12pt"
                                               Margin="0,0,10,0"
                                               Padding="5,3,5,3"
                                               Text="{Binding DateString}"
                                               />


                                    <TextBlock Grid.Column="1"
                                               FontSize="12pt"
                                               Padding="5,3,5,3"
                                               Text="{Binding Text}"
                                               TextWrapping="Wrap"
                                               />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate> 
                </ListBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>

    <Window.Resources>
        <Style x:Key="{x:Type ListBox}"
               TargetType="ListBox">
          <Setter Property="SnapsToDevicePixels" Value="true" />
          <Setter Property="OverridesDefaultStyle" Value="true" />
          <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
          <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
          <Setter Property="Template">
            <Setter.Value>
              <ControlTemplate TargetType="ListBox">
                <Border Name="Border"
                        BorderThickness="1"
                        CornerRadius="2"
                        Background="White"
                        >
                  <ScrollViewer Margin="0"
                                Focusable="false">
                    <StackPanel Margin="1"
                                IsItemsHost="True" />
                  </ScrollViewer>
                </Border>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
        </Style>

        <Style x:Key="{x:Type ListBoxItem}"
               TargetType="ListBoxItem">
          <Setter Property="SnapsToDevicePixels"
                  Value="true" />
          <Setter Property="OverridesDefaultStyle"
                  Value="true" />
          <Setter Property="Template">
            <Setter.Value>
              <ControlTemplate TargetType="ListBoxItem">
                <Border x:Name="Border"
                        Padding="1"
                        SnapsToDevicePixels="true"
                        Background="Transparent"
                        >
                  <ContentPresenter />
                </Border>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
        </Style>
    </Window.Resources> 
    
</Window>
